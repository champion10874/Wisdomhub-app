{
  "name": "wisdomhub-auth",
  "version": "1.0.0",
  "description": "Auth Service",
  "main": "app.js",
  "scripts": {
    "start": "cross-env pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
    "stop": "cross-env pm2 stop all",
    "delete": "cross-env pm2 delete all",
    "dev": "cross-env nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
    "lint:check": "cross-env eslint 'src/**/*.ts'",
    "lint:fix": "cross-env eslint 'src/**/*.ts' --fix",
    "prettier:check": "cross-env prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "cross-env prettier --write 'src/**/*.{ts,json}'",
    "build": "cross-env tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "cross-env jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "keywords": [],
  "author": "Or Hasson",
  "license": "MIT",
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.2",
    "@faker-js/faker": "^8.4.1",
    "@hassonor/wisdomhub-shared": "^0.1.15",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "sequelize": "^6.37.1",
    "typescript": "^5.4.2",
    "typescript-transform-paths": "^3.4.7",
    "unique-username-generator": "^1.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "ts-alias": "^0.0.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
